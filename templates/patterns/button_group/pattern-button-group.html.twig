{% if variant and variant|lower != 'default' %}
  {% set variants = variant|split('__')|map(v => v|lower|replace({(v): 'fr-btns-group--' ~ v})|replace({'_': '-'})) %}
  {% set attributes = attributes.addClass(variants) %}
{% endif %}

{% if icon_position %}
  {% set attributes = attributes.addClass('fr-btns-group--icon-' ~ icon_position) %}
{% endif %}

{% if equisized %}
  {% set attributes = attributes.addClass('fr-btns-group--' ~ equisized) %}
{% endif %}

{% if buttons %}
  <ul{{ attributes.addClass('fr-btns-group') }}>
    {% for button in buttons %}
      <li>{{ button }}</li>
    {% endfor %}
  </ul>
{% endif %}
